
@{
    ViewBag.Title = "LandingPage";
    Layout = "~/Views/Shared/_Blank_Layout.cshtml";
}




<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript" src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
<script src="~/Scripts/LoginScripts/Login.js"></script>

<div id="app">
    <section class="section">
        <div class="container mt-5">
            <div class="row">
                <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
                    <div class="login-brand">
                        <a class="navbar-brand" href="@Url.Action("SignIn", "Account")"><img src="~/Images/CompanyLogo/1290601861_Genius.png" alt="logo" hi width="100" class="shadow-light rounded-circle"></a>
                    </div>
                    <div class="card card-primary">
                        <div class="card-body">
                            <form method="POST" action="#" class="needs-validation" novalidate="">
                                <div class="form-group">
                                    <label for="email">Username</label>
                                    <input id="username" type="email" class="form-control" name="Username" tabindex="1" readonly>
                                    <div class="invalid-feedback">
                                        Please fill in a valid Username
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="d-block">
                                        <label for="password" class="control-label">Password</label>
                                    </div>
                                    <input id="password" type="password" class="form-control" name="Password" tabindex="2" readonly>
                                    <div class="invalid-feedback">
                                        Please fill in your password
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button type="button" class="btn btn-primary btn-lg btn-block SignInUser" tabindex="4" onclick="location.href='@Url.Action("SignIn", "Account")'">
                                        Login
                                    </button>
                                </div>
                            </form>

                        </div>
                    </div>
                    <div class="mt-5 text-muted text-center">
                        @*Don't have an account? <a href="@Url.Action("Register", "Account")">Register</a>*@
                    </div>
                    <div class="simple-footer">
                        Copyright &copy; AMP <span id="year"></span>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script>
    //Javascript code that  retrieves the current year
    document.getElementById("year").innerHTML = new Date().getFullYear();
</script>
